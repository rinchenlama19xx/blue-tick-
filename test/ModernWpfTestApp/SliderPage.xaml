<local:TestPage
    x:Class="MUXControlsTestApp.SliderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:local="clr-namespace:MUXControlsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{DynamicResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Margin="12">
        <TextBlock
            Text="Sample Slider"
            Style="{DynamicResource StandardGroupHeader}" />
        <Slider />
        <Slider ui:ControlHelper.Header="Slider with header" />
        <Slider
            ui:ControlHelper.Header="Slider with preset values"
            Value="25"
            Minimum="0"
            Maximum="50" />
    </StackPanel>

</local:TestPage>
