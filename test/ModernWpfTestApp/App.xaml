<Application
    x:Class="MUXControlsTestApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:local="clr-namespace:MUXControlsTestApp">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources>
                    <ui:ThemeResources.ThemeDictionaries>
                        <ResourceDictionary x:Key="Light">
                            <ResourceDictionary.MergedDictionaries>
                                <ui:DefaultThemeResources Key="Light" />
                            </ResourceDictionary.MergedDictionaries>
                            <StaticResource x:Key="ApplicationPageBackgroundThemeBrush" ResourceKey="SystemControlPageBackgroundAltHighBrush" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Dark">
                            <ResourceDictionary.MergedDictionaries>
                                <ui:DefaultThemeResources Key="Dark" />
                            </ResourceDictionary.MergedDictionaries>
                            <StaticResource x:Key="ApplicationPageBackgroundThemeBrush" ResourceKey="SystemControlPageBackgroundAltHighBrush" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="HighContrast">
                            <ResourceDictionary.MergedDictionaries>
                                <ui:DefaultThemeResources Key="HighContrast" />
                            </ResourceDictionary.MergedDictionaries>
                            <StaticResource x:Key="ApplicationPageBackgroundThemeBrush" ResourceKey="SystemControlPageBackgroundAltHighBrush" />
                        </ResourceDictionary>
                    </ui:ThemeResources.ThemeDictionaries>
                </ui:ThemeResources>
                <ui:XamlControlsResources />
                <ResourceDictionary Source="/ModernWpf.MahApps;component/Styles/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="StandardGroupHeader" TargetType="TextBlock">
                <Setter Property="FontSize" Value="22" />
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>

            <Style x:Key="StandardGroupingBorder" TargetType="Border">
                <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundChromeGrayBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Padding" Value="8" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
