                                <controls:FlyoutService.Flyout>
                                    <controls:Flyout>
                                        <TextBlock Text="Hello World" />
                                    </controls:Flyout>
                                </controls:FlyoutService.Flyout>
                                <controls:ContextFlyoutService.ContextFlyout>
                                    <controls:Flyout>
                                        <TextBlock
                                            Text="Hello World"
