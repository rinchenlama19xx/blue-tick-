                                <controls:FlyoutService.Flyout>
                                    <controls:MenuFlyout>
                                        <MenuItem Header="Share">
                                            <MenuItem.Icon>
                                                <controls:FontIcon Glyph="&#xE72D;" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem
                                            Header="Copy"
                                            Icon="Copy" />
                                        <MenuItem
                                            Header="Delete"
                                            Icon="Delete" />
                                        <Separator />
                                        <MenuItem Header="Rename" />
                                        <MenuItem Header="Select" />
                                    </controls:MenuFlyout>
                                </controls:FlyoutService.Flyout>
