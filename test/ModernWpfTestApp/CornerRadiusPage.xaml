                                IsEditable="True"
                                controls:ControlHelper.CornerRadius="{Binding ControlCornerRadius, Mode=OneWay}">
                                <ComboBoxItem Content="Item 1" />
                                <ComboBoxItem Content="Item 2" />
                                <ComboBoxItem Content="Item 3" />
                            </ComboBox>
                        </Grid>

                        <TextBlock
                            Grid.Row="8"
